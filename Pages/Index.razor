@page "/"

@if (Datamanager.LoadedItems.Count > 0)
{
    <MudExpansionPanels MultiExpansion="true">
        @foreach (TrendItem en in Datamanager.LoadedItems)
        {
            <MudExpansionPanel Text="@en.ParseCreatedByText()">
                <RepositoryView EntryItem="en" />
            </MudExpansionPanel>
        }
    </MudExpansionPanels>

} else {
    <MudContainer style="position: absolute; top: 30vh; width: 100%; text-align: center;">
        <MudContainer style="display: flex; flex-direction: column; align-items: center;">
            <MudText>Loading...</MudText>
        </MudContainer>
    </MudContainer>
}