@inherits LayoutComponentBase

<div class="page">
	<main>
		<MudAppBar Fixed="true">
			<MudButton OnClick="() => NavMan.Reload()" StartIcon="@Icons.Material.Filled.RestartAlt" Color="Color.Inherit">Reload</MudButton>
			<MudSpacer />

			<MudButton OnClick="OpenSearchDialog" StartIcon="@Icons.Material.Filled.Search" Color="Color.Inherit">Search</MudButton>
			<MudSpacer />

			<MudSwitch T="bool" CheckedChanged="ChangeDarkmode" Color="Color.Primary" />
			<MudButton Size="Size.Small" Href="https://github.com/liebki/GithubExplorer" Target="_blank" StartIcon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit">GitHub</MudButton>
		</MudAppBar>

		<article style="padding-top: 75px" class="content px-4">

			<MudToolBar Dense>
				<MudSpacer />
				<MudText>
					Top @Datamanager.ActiveSettings.ActiveGithubUrlTrendType language:
					<MudChip Href="@Datamanager.GithubTopicsProgrammingLanguageUrl(Datamanager.MostUsedProgramminglanguage)" Text="@Datamanager.MostUsedProgramminglanguage" Variant="Variant.Text" Color="Color.Inherit" />
					</MudText>
				<MudSpacer />
			</MudToolBar>

			<div style="padding-bottom: 20px">
				@Body
			</div>

		</article>
	</main>
</div>

<MudThemeProvider @bind-IsDarkMode="Datamanager.ActiveSettings.IsDarkmodeEnabled" />
<MudDialogProvider />
<MudSnackbarProvider />